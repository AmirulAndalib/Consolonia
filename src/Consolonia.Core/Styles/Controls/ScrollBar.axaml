<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:Consolonia.Core.Styles.Controls.Helpers">
  <Style Selector="ScrollBar">
    <Setter Property="Cursor" Value="Arrow" />
    <Setter Property="Background"
            Value="{DynamicResource ThemeBackgroundBrush}" />
    <Setter Property="BorderBrush"
            Value="{DynamicResource ThemeBackgroundBrush}" />
    <Setter Property="Foreground"
            Value="{DynamicResource ThemeBorderBrush}" />
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{TemplateBinding Foreground}">
          <Grid RowDefinitions="Auto,*,Auto">
            <Border Grid.Row="1"
                    BorderThickness="0"
                    Background="{TemplateBinding Background}"/>
            <helpers:SymbolsControl HorizontalAlignment="Center"
                                    Classes="repeat"
                                    Grid.Row="0"                       
                                    Foreground="{TemplateBinding BorderBrush}"
                                    Text="^"/>
            <Track Grid.Row="1"
                   Minimum="{TemplateBinding Minimum}"
                   Maximum="{TemplateBinding Maximum}"
                   Value="{TemplateBinding Value, Mode=TwoWay}"
                   ViewportSize="{TemplateBinding ViewportSize}"
                   Orientation="{TemplateBinding Orientation}"
                   IsDirectionReversed="True">
              <Thumb Name="thumb"/>
            </Track>
            <helpers:SymbolsControl HorizontalAlignment="Center"
                                    Foreground="{TemplateBinding BorderBrush}"
                                    Classes="repeat"
                                    Grid.Row="2"
                                    Focusable="False"
                                    MinHeight="1"
                                    Text="v"/>
          </Grid>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
  <Style Selector="ScrollBar:horizontal">
    <Setter Property="Template">
      <ControlTemplate>
        <Border Background="{TemplateBinding Foreground}">
          <Grid ColumnDefinitions="Auto,*,Auto">
            <Border Grid.Column="1"
                    BorderThickness="0"
                    Background="{TemplateBinding Background}"/>
            <helpers:SymbolsControl HorizontalAlignment="Center"
                                    Classes="repeat"
                                    Grid.Column="0"                       
                                    Foreground="{TemplateBinding BorderBrush}"
                                    Text="&lt;"/>
            <Track Grid.Column="1"
                   Minimum="{TemplateBinding Minimum}"
                   Maximum="{TemplateBinding Maximum}"
                   Value="{TemplateBinding Value, Mode=TwoWay}"
                   ViewportSize="{TemplateBinding ViewportSize}"
                   Orientation="{TemplateBinding Orientation}">
              <Thumb Name="thumb"/>
            </Track>
            <helpers:SymbolsControl HorizontalAlignment="Center"
                                    Classes="repeat"
                                    Grid.Column="2"                       
                                    Foreground="{TemplateBinding BorderBrush}"
                                    Text="&gt;"/>
          </Grid>
        </Border>
      </ControlTemplate>
    </Setter>
  </Style>
  <Style Selector="ScrollBar /template/ Thumb#thumb">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Rectangle VerticalAlignment="Stretch"
            Fill="{TemplateBinding Foreground}">
          </Rectangle>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  <!--<Style Selector="ScrollBar /template/ Thumb#thumb:pointerover">
    <Setter Property="Background" Value="{DynamicResource ThemeControlHighBrush}"/>
  </Style>
  <Style Selector="ScrollBar /template/ Thumb#thumb:pressed">
    <Setter Property="Background" Value="{DynamicResource ThemeControlVeryHighBrush}"/>
  </Style>-->
  <Style Selector="ScrollBar:horizontal /template/ Thumb#thumb">
    <Setter Property="MinWidth" Value="{DynamicResource ScrollBarThickness}" />
    <Setter Property="Height" Value="{DynamicResource ScrollBarThumbThickness}" />
  </Style>
  <Style Selector="ScrollBar:vertical">
    <Setter Property="Width" Value="1" />
  </Style>
  <Style Selector="ScrollBar:horizontal">
    <Setter Property="Height" Value="1" />
  </Style>
  <Style Selector="ScrollBar:vertical /template/ Thumb#thumb">
    <Setter Property="MinHeight" Value="{DynamicResource ScrollBarThickness}" />
    <Setter Property="Width" Value="{DynamicResource ScrollBarThumbThickness}" />
  </Style>
